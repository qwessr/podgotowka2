<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    tools:context=".AuthorizationActivity"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="103dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_hello" />

        <TextView
            style="@style/Typography.Matule.Title1.Black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="Добро пожаловать!" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="left"
        android:minLines="2"
        android:text="Войдите, чтобы пользоваться функциями приложения"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_editor_absoluteX="20dp" />

    <com.example.uikit.edit_text.etDefault
        android:id="@+id/etDefault1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.example.uikit.edit_text.EtPassword
        android:layout_marginTop="8dp"
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etDefault1"
        tools:layout_editor_absoluteX="20dp" />

    <com.example.uikit.edit_text.Button.BthBig
        android:id="@+id/etNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"

        />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/textView3"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Зарегистрироваться"
        android:onClick="onRegistration"
        android:textColor="@color/accent"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
      />

    <TextView
        android:id="@+id/textView4"
        android:layout_marginTop="48dp"
        style="@style/Typography.Matule.Caption.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Или войдите с помощью"
        android:textColor="@color/diskripchn"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="20dp" />




    <com.example.uikit.edit_text.Button.BthSocial
        app:layout_constraintTop_toBottomOf="@+id/textView4"
android:layout_marginTop="8dp"
        android:id="@+id/bthVk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.example.uikit.edit_text.Button.BthSocial
        app:layout_constraintTop_toBottomOf="@+id/bthVk"
        android:layout_marginTop="8dp"
        android:id="@+id/bthYandex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />




</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>