<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="60dp"
    android:paddingBottom="20dp"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.example.uikit.edit_text.search.EtSearch
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="42dp" />

            <TextView
                android:id="@+id/textView1"
                style="@style/Typography.Matule.Title2.Semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Акции и новости"
                android:textColor="@color/diskripchn" />

            <HorizontalScrollView
                android:id="@+id/Banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/filterContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/covid"
                        android:layout_marginRight="20dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/reclama"/>
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                style="@style/Typography.Matule.Title2.Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Каталог описаний"
                android:textColor="@color/diskripchn" />

            <HorizontalScrollView
                android:id="@+id/Buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:scrollbars="none">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.example.uikit.edit_text.Button.BthChips
                        android:id="@+id/bthChipsAll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        />

                    <com.example.uikit.edit_text.Button.BthChips
                        android:id="@+id/bthChipsY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"/>

                    <com.example.uikit.edit_text.Button.BthChips
                        android:id="@+id/bthChipsX"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"/>

                    <com.example.uikit.edit_text.Button.BthChips
                        android:id="@+id/bthChipsKids"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"/>

                    <com.example.uikit.edit_text.Button.BthChips
                        android:id="@+id/bthChipsAccessories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/Buttons"
                app:layout_constraintBottom_toTopOf="@+id/tabBar"
                android:clipToPadding="false"
                android:paddingBottom="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.example.uikit.edit_text.tabbar.TabBarCustom
        android:id="@+id/tabBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>