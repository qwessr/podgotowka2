<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
<com.example.uikit.edit_text.header.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/tabBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="26dp">

                        <com.example.uikit.edit_text.search.EtSearch
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp" />

                        <com.example.uikit.edit_text.etDefault
                            android:id="@+id/etDefault"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />

                        <com.example.uikit.edit_text.etDefault
                            android:id="@+id/etFilled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />

                        <com.example.uikit.edit_text.etDefault
                            android:id="@+id/etDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />

                        <com.example.uikit.edit_text.etDefault
                            android:id="@+id/etError"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />

                        <com.example.uikit.edit_text.EtPassword
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />

                        <com.example.uikit.edit_text.EtDate
                            android:id="@+id/etDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp" />

                                <select.CustomSelect
                                    android:id="@+id/select"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:layout_editor_absoluteX="5dp"
                                    tools:layout_editor_absoluteY="19dp" />


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/bthShowDialog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:text="Открыть BottomSheet" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Buttons"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.example.uikit.edit_text.Button.BthBig
                            android:id="@+id/bthBig"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <com.example.uikit.edit_text.Button.BthSmall
                            android:id="@+id/bthSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <com.example.uikit.edit_text.Button.BthChips
                            android:id="@+id/bthChips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <com.example.uikit.edit_text.Button.BthCard
                            android:id="@+id/bthCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <com.example.uikit.edit_text.Button.BthSocial
                            android:id="@+id/bthVk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp" />

                        <com.example.uikit.edit_text.Button.BthSocial
                            android:id="@+id/bthYandex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                                <com.example.uikit.edit_text.Button.BthBubbleBack
                                    android:id="@+id/bthBack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="16dp" />

                                <com.example.uikit.edit_text.Button.BthBubbleFilter
                                    android:id="@+id/bthFilter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                        </LinearLayout>

                </LinearLayout>
        </ScrollView>

        <com.example.uikit.edit_text.tabbar.TabBarCustom
            android:id="@+id/tabBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>